@code {
    [Parameter]
    public string Category { get; set; }

    private ProductViewModel _modalProduct;

    private List<ProductViewModel> _productViewModels;

    private List<string> _filterCategories;
    private List<string> _filterColors;
    private List<string> _filterSizes;
    private List<string> _filterBrands;
    private int _take = 9;
    private int _page = 0;

    private string _productsUrl;

    private IJSObjectReference module;

    protected override async Task OnInitializedAsync()
    {
        _productsUrl = apiService.ProductsUrl;

        _filterCategories = new();
        _filterColors = new();
        _filterSizes = new();
        _filterBrands = new();
        _modalProduct = new ProductViewModel();

        if (!string.IsNullOrEmpty(Category))
        {
            Category = Category.ToLower();
            _filterCategories.Add(Category);
            await ApplyFiltersAsync();
        }
        else
        {
            _productViewModels = await GetProductViewModelsAsync();
        }

    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (module == null)
            module = await jsRuntime.InvokeAsync<IJSObjectReference>("import", "./src/js/shop-filters.js");
    }

    private async Task<List<ProductViewModel>> GetProductViewModelsAsync()
    {
        var response = await apiService.SendToAPIAsync(HttpMethod.Get, _productsUrl);
        if (response.IsSuccessStatusCode)
            return await response.Content.ReadFromJsonAsync<List<ProductViewModel>>();

        return new List<ProductViewModel>();
    }

    private async Task NextPage()
    {
        _page++;
        UpdateFilterQuery();
        var products = await GetProductViewModelsAsync();
        if (products.Count > 0)
        {
            _productViewModels = products;
            navigationManager.NavigateTo("/shop");
        }
        else
        {
            _page--;
            UpdateFilterQuery();
        }
    }
    private async Task PrevPage()
    {
        if (_page > 0)
        {
            _page--;
            UpdateFilterQuery();
            var products = await GetProductViewModelsAsync();
            if (products.Count > 0)
            {

                _productViewModels = products;
                navigationManager.NavigateTo("/shop");
            }
            else
            {
                _page++;
                UpdateFilterQuery();
            }
        }
    }

    private void SetTake(int take)
        => _take = take;

    private void ToggleCategoryFilter(string category)
    {
        if (_filterCategories.Contains(category))
        {
            _filterCategories.Remove(category);
            if (Category == category)
                Category = string.Empty;
        }
        else
            _filterCategories.Add(category);
    }

    private void ToggleColorFilter(string color)
    {
        if (_filterColors.Contains(color))
            _filterColors.Remove(color);
        else
            _filterColors.Add(color);
    }

    private void ToggleSizeFilter(string size)
    {
        if (_filterSizes.Contains(size))
            _filterSizes.Remove(size);
        else
            _filterSizes.Add(size);
    }

    private void ToggleBrandFilter(int id)
    {
        if (_filterBrands.Contains(id.ToString()))
            _filterBrands.Remove(id.ToString());
        else
            _filterBrands.Add(id.ToString());
    }

    private async Task ApplyFiltersAsync()
    {
        _page = 0;
        UpdateFilterQuery();
        _productViewModels = await GetProductViewModelsAsync();
    }

    private void UpdateFilterQuery()
    {
        _productsUrl = apiService.ProductsUrl;
        if (_filterCategories.Count + _filterCategories.Count + _filterSizes.Count + _filterBrands.Count > 0)
        {
            _productsUrl += "?";
            if (_filterCategories?.Count > 0)
            {
                _productsUrl += "categories=";
                foreach (var category in _filterCategories)
                {
                    _productsUrl += $"{category},";
                }
                _productsUrl += "&";
            }

            if (_filterColors?.Count > 0)
            {
                _productsUrl += "colors=";
                foreach (var color in _filterColors)
                {
                    _productsUrl += $"{color},";
                }
                _productsUrl += "&";
            }

            if (_filterSizes?.Count > 0)
            {
                _productsUrl += "sizes=";
                foreach (var size in _filterSizes)
                {
                    _productsUrl += $"{size},";
                }
                _productsUrl += "&";
            }

            if (_filterBrands?.Count > 0)
            {
                _productsUrl += "brands=";
                foreach (var brand in _filterBrands)
                {
                    _productsUrl += $"{brand},";
                }
            }
        }

        if (_productsUrl.Contains('?'))
            _productsUrl += "&";
        else
            _productsUrl += "?";
        _productsUrl += $"take={_take}&from={_take * _page}";
    }
}
