
@if (BlackText != null || TealText != null)
{
    <div class="text-center">
        <h1 class="font-play fw-bold text-uppercase">
            <span>@BlackText</span>
            <span class="text-teal">@TealText</span>
        </h1>
        <img src="/src/img/zigzag.svg" alt="---" />

        @if (!string.IsNullOrEmpty(Subtitle))
        {
            <p class="mt-3">@Subtitle</p>
        }
    </div>
}

@code {
    [Parameter]
    public string BlackText { get; set; }

    [Parameter]
    public string TealText { get; set; }

    [Parameter]
    public string Subtitle { get; set; }
}
